{
	"rootDir": ".",
	"testMatch": [
		"<rootDir>/test/**/*.spec.ts",
		"<rootDir>/test/**/*.e2e-spec.ts"
	],
	"moduleFileExtensions": ["js", "json", "ts"],
	"transform": {
		"^.+\\.(t|j)s$": "ts-jest"
	},
	"testEnvironment": "node",
	"collectCoverageFrom": ["src/**/*.ts", "!src/main.ts", "!src/lambda.ts"],
	"moduleNameMapper": {
		"^src/(.*)$": "<rootDir>/src/$1"
	}
}
